<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type usr</th>
      <th>Type card</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Movie url</th>
      <th>Link url</th>
      <th>Headline</th>
      <th>Context</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.title %></td>
        <td><%= card.type_usr_id %></td>
        <td><%= card.type_card_id %></td>
        <td><%= card.description %></td>
        <td><%= card.image_url %></td>
        <td><%= card.movie_url %></td>
        <td><%= card.link_url %></td>
        <td><%= card.headline %></td>
        <td><%= card.context %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
